<p id="notice"><%= notice %></p>

<h1>Listing Items </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Status</th>
      <th>Img</th>
      <th>Price</th>
      <th>Posted On</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>
<%= paginate @items %>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.category.name %></td>
        <td><%= item.status %></td>
        <td><%= item.img%></td>
        <td><%= item.price%></td>
        <td><%= item.created_at%></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

